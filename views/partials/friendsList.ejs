<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>Homepage</title>
  <style>
    .card-container {
      position: relative;
    }

    .card {
      display: flex;
      flex-direction: column;
      height: 100%; /* Adjust this value as needed */
      background-size: cover;
      background-position: center;
    }

    .card-body {
      flex: 1;
    }

    .card-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(255, 255, 255, 0.8);
      display: none;
      align-items: center;
      justify-content: center;
    }

    .overlay-content {
      text-align: center;
    }
  </style>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <div class="container mt-4">
    <div class="row">
      <% friends.forEach(function(friend) { %>
      <div class="col-md-4 mb-4">
        <div class="card-container">
          <div class="card h-100" style="background-image: url('<%= friend.picUrl %>');">
            <div class="card-body text-center">
              <h5 class="card-title"><%= friend.name %></h5>
            </div>
            <div class="card-overlay">
              <div class="overlay-content">
                <form action="/submit" method="POST" class="friends">
                  <!-- Hidden Fields for User FBID and Target Friend FBID -->
                  <input type="hidden" name="userFbid" value="<%= user.id %>" />
                  <input type="hidden" name="targetFbid" value="<%= friend.fbid %>">

                  <!-- Checkboxes for Levels -->
                  <div class="d-flex justify-content-center mb-3">
                    <div class="form-check me-3">
                      <input class="form-check-input" type="checkbox" name="r1" value="true" id="r1-<%= friend.fbid %>" <%=friend.r1 ? 'checked' : '' %>>
                      <label class="form-check-label" for="r1-<%= friend.fbid %>">R1</label>
                    </div>
                    <div class="form-check me-3">
                      <input class="form-check-input" type="checkbox" name="r2" value="true" id="r2-<%= friend.fbid %>" <%=friend.r2 ? 'checked' : '' %>>
                      <label class="form-check-label" for="r2-<%= friend.fbid %>">R2</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="r3" value="true" id="r3-<%= friend.fbid %>" <%=friend.r3 ? 'checked' : '' %>>
                      <label class="form-check-label" for="r3-<%= friend.fbid %>">R3</label>
                    </div>
                  </div>

                  <button type="submit" class="btn btn-primary">Update Relationship</button>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <script>
    $(document).ready(function () {
      $('.card').click(function () {
        $(this).find('.card-overlay').fadeIn();
      });
  
      // $('.card-overlay').click(function (event) {
      //   event.stopPropagation(); // Prevent click event from propagating to parent card
      // });
  
      // $(.card).click(function () {
      //   $('.card-overlay').fadeOut();
      // });
  
      $('.card-overlay form').submit(function (event) {
        $('.card-overlay').fadeOut();

        event.preventDefault(); // Prevent default form submission
  
        const formData = $(this).serialize(); // Serialize form data
        const form = $(this); // Reference to the form
  
        $.ajax({
          type: 'POST',
          url: '/submit', // Your endpoint
          data: formData,
          success: function (response) {
            alert('Submission Successful!');
            form.closest('.card-overlay').fadeOut();
          },
          error: function (xhr) {
            alert('Submission Failed: ' + xhr.responseText);
          }
        });
      });
    });
  </script>
  
</body>

</html>
